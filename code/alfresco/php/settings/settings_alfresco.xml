<?xml version="1.0" encoding="UTF-8"?>
<application name="alfresco">
	<settings>
		<category name="credentials">
			<setting name="username" field="text" default="admin">
				<validations>
					<validation rule="required" message="ThisFieldIsRequired" />
				</validations>
			</setting>
			<setting name="password" field="password" default="">
				<validations>
					<validation rule="required" message="ThisFieldIsRequired" />
				</validations>
			</setting>
                        <setting name="alfresco_url" field="text" default="http://localhost/alfresco">
				<validations>
					<validation rule="required" message="ThisFieldIsRequired" />
				</validations>
			</setting>
		</category>
	</settings>
</application>